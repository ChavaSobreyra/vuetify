.application
  display: flex
  flex-direction: row
  height: 100vh
  -webkit-backface-visibility: hidden

// Main theme
.application
  &--light
    application($material-light)

  &--dark
    application($material-dark)

  .theme--light
    text($material-light, $material-dark)

  .theme--dark
    text($material-dark, $material-light)